@using IgniteUI.Blazor.Controls
<style>
    #circularProgress {
        margin-right: 50px;
        margin-left: 20px;
        --diameter: 100px;
        --stroke-thickness: 5px;
    }
</style>
@if (StatisticsByGroups == null)
{
    <Loading></Loading>
}
else
{
    <h1>Общая статистика по группам</h1>

    <table>
        <thead>
        <tr>
            <th>Группа</th>
            <th>Преподователь</th>
            <th>Предмет</th>
            <th>Процент посещаемости</th>
            <th>Процент активности микрофона</th>
            <th>Процент активности стрима</th>
            <th>Процент активности видео</th>
            <th>Процент выключеного звука</th>
        </tr>
        </thead>
        @foreach (var statistic in StatisticsByGroups)
        {
            <tbody>
            <tr>
                <td>@statistic.GroupName</td>
                <td>@statistic.LectureName</td>
                <td>@statistic.SubjectName</td>
                <td>
                <IgbCircularProgress id="circularProgress" Max=100 Value=@statistic.PercentageOfAttendance>
                    <IgbCircularGradient slot="gradient" Offset="0%"   Color="#ff9a40"/>
                    <IgbCircularGradient slot="gradient" Offset="50%"  Color="#1eccd4"/>
                    <IgbCircularGradient slot="gradient" Offset="100%" Color="#ff0079"/>
                </IgbCircularProgress>
                    </td>
                <td>
                <IgbCircularProgress id="circularProgress" Max=100 Value=@statistic.PercentageOfMicrophoneActivity>
                    <IgbCircularGradient slot="gradient" Offset="0%"   Color="#ff9a40"/>
                    <IgbCircularGradient slot="gradient" Offset="50%"  Color="#1eccd4"/>
                    <IgbCircularGradient slot="gradient" Offset="100%" Color="#ff0079"/>
                </IgbCircularProgress>
                    </td>
                <td>
                <IgbCircularProgress id="circularProgress" Max=100 Value=@statistic.PercentageOfStreamActivity>
                    <IgbCircularGradient slot="gradient" Offset="0%"   Color="#ff9a40"/>
                    <IgbCircularGradient slot="gradient" Offset="50%"  Color="#1eccd4"/>
                    <IgbCircularGradient slot="gradient" Offset="100%" Color="#ff0079"/>
                </IgbCircularProgress>
                    </td>
                <td>
                <IgbCircularProgress id="circularProgress" Max=100 Value=@statistic.PercentageOfVideoActivity>
                    <IgbCircularGradient slot="gradient" Offset="0%" Color="#ff9a40" />
                    <IgbCircularGradient slot="gradient" Offset="50%" Color="#1eccd4" />
                    <IgbCircularGradient slot="gradient" Offset="100%" Color="#ff0079" />
                </IgbCircularProgress>
                    </td>
                <td>
                <IgbCircularProgress id="circularProgress" Max=100 Value=@statistic.PercentageOfSelfDeafenedActivity>
                    <IgbCircularGradient slot="gradient" Offset="0%" Color="#ff9a40" />
                    <IgbCircularGradient slot="gradient" Offset="50%" Color="#1eccd4" />
                    <IgbCircularGradient slot="gradient" Offset="100%" Color="#ff0079" />
                </IgbCircularProgress>
                    </td>
            </tr>
            </tbody>
        }
    </table>
}
